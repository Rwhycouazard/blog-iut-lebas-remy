<div class="row">
    <div class="col-6 offset-3">
        <form method="POST" action="articles.php" enctype="multipart/form-data">
            <div class="mb-3">
                <input type="text" name="id" class="form-control" value="{{get.id}}" hidden>
            </div>
            <div class="mb-3">
                <label for="titre" class="form-label"  >Titre</label>
                <input type="text" name="titre" class="form-control" id="titre" required value="{{listeModif.getTitre}}">
            </div>
            <div class="form-group">
                <label for="textarea" class="form-label">le text de mon article</label>
                <textarea class="form-control" name="texte" placeholder="Leave a comment here" id="textarea" style="height: 100px" require>{{listeModif.getTexte}}</textarea>
            </div>
            <div class="mb-3">
                <label for="imageFile" class="form-label">inserer votre image</label>
                <input class="form-control" name="image" type="file" id="imageFile" name="fichier">
                {% if get.id %}
                    <img src="img/{{ listeModif.getId}}.jpg" style="max-width: 150px;">
                {% endif %}
            </div>
            <div class="form-check">
                <input class="form-check-input" name="publie" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Article a publier ?
                </label>
            </div>
            <button type="submit"  class="btn btn-primary" name="bouton" value="envoyer">Submit</button>
        </form>
    </div>
</div>